{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@pixijs-live2d/*": [
                "./pixijs-live2d/src/*"
            ],
            "@cubism-framework/*": [
                "./pixijs-live2d/cubism-sdk/Framework/dist/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "pixijs-live2d/cubism-sdk/**/*.ts",
        "../shared/types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}